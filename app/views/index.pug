extends template

block content
    #js-error-message.error-message
    form(id="register")        
        .form-box(style='text-align:center')
            h2 Register
            .fb-item
                span Name
                br
                input(type='text' name='name' placeholder='John Smith')
            .fb-item
                span Email
                br
                input(type='email' name='email' placeholder='example@gmail.com') 
            .fb-item
                span Password
                br
                input(type='password' name='password' placeholder='******')
            .fb-item
                span Confirm Password
                br
                input(type='password' name='confirm' placeholder='******')  
            .fb-item
                span Phone Number
                br
                input(type='text' name='phoneNumber' placeholder='1-333-333-3333')
            .fb-item
                span Phone Provider
                br
                input(type='text' name='phoneProvider' placeholder='Verison') 
            .fb-item
                span Class Year
                br
                input(type='number' name='classYear' placeholder='2020') 
                button#submit(type='button' onclick='submitUser()') Register

    .modal#js-success
        .modal-content
            h2 Thank you for registering!
